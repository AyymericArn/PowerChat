@font-face {
  font-family: "Aracne";
  src: url("./assets/fonts/Aracne/aracne-condensed-soft_regular_italic-webfont.woff2") format("woff2"),
          url("./assets/fonts/Aracne/aracne-condensed-soft_regular_italic-webfont.woff") format("woff");
}
@font-face {
  font-family: "BlackBubble";
  src: url("./assets/fonts/BlackBubble/BlackBubble.ttf") format("truetype");
}
@font-face {
  font-family: "Ego";
  src: url("./assets/fonts/Ego/Ego-Regular.woff2") format("woff2"),
          url("./assets/fonts/Ego/Ego-Regular.woff") format("woff");
}

html {
  height: 100%;
  box-sizing: border-box;
  margin 0
  padding 0
}

*,
*:before,
*:after {
  box-sizing: inherit;
}

body {
  min-height: 100%;
  margin: 0;
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  scroll-behavior: smooth;
  text-rendering: optimizeSpeed;
  line-height: 1.5;
  color: #212223;

  display: flex;
  flex-direction: column;
  justify-content: center;
}
